<section class="page__section bg-c-g1 u-clear">
  {{#each projects}}
    <a href="{{link}}" class="project block float-l w12_m w13_xl pv-5 mv-24">
      <h3 class="font-w-5 inline-relative mb-6 underline">{{title}}</h3>
      <p>{{caption}}</p>
    </a>
  {{/each}}
</section>

<section class="posts page__section relative bg-c-w">
  <div class="container u-clear">
    <div class="relative w13_l float-l mb-30">
      <a href="./writing">
        <h2 class="f4 font-w-9 underline--thick inline-relative">WRITING</h2>
      </a>
    </div>
    <div class="relative w23_l float-l">
      {{#limit posts 2}}
        {{> post}}
      {{/limit}}
    </div>
  </div>
  <footer class="posts__footer relative u-clear">
    <hr class="page__divider w1 bg-c-g1">
    <a href="./writing" role="button" class="button--ghost f5 float-r font-w-9 mt-10">READ MORE ></a>
  </footer>
</section>

<footer class="block-relative h14 bg-c-theme"></footer>
